---
/* NOTAS
    Antes el render se obtenía de astro, ahora se desestructura el método render directamente desde el objeto de Astro.props.
*/
import { type GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import { SHOW_BUY_BUTTON } from "astro:env/server";
import Layout from "../../layouts/Layout.astro";
import AmazonLogo from "../../components/AmazonLogo.astro";
import BookScore from "../../components/BookScore.astro";
import BuyButton from "../../components/BuyButton.astro";

export const getStaticPaths = (async () => {
    const books = await getCollection('books');

    return books.map((book) => ({
        params: { id: book.slug },
        props: { book }
    }));
}) satisfies GetStaticPaths;

const { book } = Astro.props;
const { data, slug, render } = book;
const { title, author, img, readtime, description, buy } = data;
const { Content } = await render();

export const prerender = true;
---

<Layout title={`${title} - Dev Books`}>
    <div class="flex gap-12">
        <aside class="flex flex-col items-center justify-center">
            <a href="/" class="hover:underline opacity-70 mb-5">⬅ Volver atrás</a>
            <img transition:name={`img-${slug}`} class="rounded w-72 h-auto" src={`/${img}`} alt={title} />
            <BookScore server:defer id={slug}>
                <span slot="fallback" class="text-xs opacity-70">Cargando puntuación...</span>
            </BookScore>
            {SHOW_BUY_BUTTON && <BuyButton server:defer buy={buy} />}
        </aside>
        <main class="max-w-3xl">
            <h1 transition:name={`title-${slug}`} class="text-4xl font-bold mb-4">{title}</h1>
            <div class="prose prose-invert">
                <Content/>
            </div>
        </main>
    </div>
</Layout>

